extends layout

block content
  h1 文章一覧
  table.table
    thead
      tr
        th 文章
        th かな
        th 削除
        th 編集
    tbody
      each item in data
        tr
          td=item.sentence
          td=item.kana
          td
            a(href=`/sentences/edit/${item.id}`) 編集
          td
            a.del-link(href='javascript:void(0)' data-id=item.id data-sentence=item.sentence data-kana=item.kana) 削除
  script(src='/js/sentences.js')